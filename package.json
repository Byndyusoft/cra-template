{
  "name": "@byndyusoft/cra-template",
  "version": "0.3.0",
  "main": "template.json",
  "keywords": [
    "byndyusoft",
    "react",
    "create-react-app",
    "template",
    "typescript"
  ],
  "description": "The base template for Create React App.",
  "scripts": {
    "prettify": "prettier --write 'template/**/*.{js, ts, tsx, css, html}'",
    "test:coverage": "react-scripts test --env=jest-environment-jsdom-sixteen --coverage --watchAll=false --testResultsProcessor=jest-sonar-reporter"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/byndyusoft/cra-template.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=10"
  },
  "bugs": {
    "url": "https://github.com/byndyusoft/cra-template/issues"
  },
  "files": [
    "template",
    "template.json"
  ],
  "devDependencies": {
    "prettier": "^2.1.2",
    "sonarqube-scanner": "2.8.1",
    "jest-sonar-reporter": "2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js, ts, tsx, css, html}": [
      "npm run prettify"
    ]
  },
  "jestSonar": {
    "reportPath": "./coverage",
    "reportFile": "test-report.xml",
    "indent": 4
  }
}
